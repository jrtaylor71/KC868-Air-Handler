# ESPHome Secrets Configuration Example
# Copy this file to secrets.yaml and fill in your actual values
# NEVER commit secrets.yaml to version control!

# WiFi Configuration
wifi_ssid: "YourWiFiNetworkName"
wifi_password: "YourWiFiPassword"

# Home Assistant Configuration (if different from default)
# ha_api_password: "your_ha_api_password"

# OTA Password (optional - can be generated automatically)
# ota_password: "your_ota_password"

# Additional secrets as needed
# mqtt_username: "your_mqtt_username"
# mqtt_password: "your_mqtt_password"